<?xml version="1.0" encoding="utf-8"?><!--个人页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_page_relativelayout"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/personal_page_linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--头像显示框-->
        <ImageButton
            android:id="@+id/personal_page_1_button_userpicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button"
            android:src="@drawable/ic_userpicture" />
        <!--昵称文本显示框-->
        <TextView
            android:id="@+id/personal_page_1_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:text="昵称"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_page_linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <!--历史记录图像开关-->
        <ImageButton
            android:id="@+id/personal_page_2_button_history"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_button"
            android:src="@drawable/ic_reloadtime" />
        <!--收藏图像开关-->
        <!--绑定手机图像开关-->

        <ImageButton
            android:id="@+id/personal_page_2_button_collect"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_button"
            android:src="@drawable/ic_star" />

        <ImageButton
            android:id="@+id/personal_page_2_button_phone"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_button"
            android:src="@drawable/ic_mobile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_page_linearlayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--历史记录文本显示框-->
        <TextView
            android:id="@+id/personal_page_3_textview_historytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="历史"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!--收藏文本显示框-->
        <TextView
            android:id="@+id/personal_page_3_textview_collecttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="收藏"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!--绑定手机文本显示框-->
        <TextView
            android:id="@+id/personal_page_3_textview_exphonetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="绑定"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/personal_page_button_association_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_button"
        android:text="申请社团"
        android:textSize="20sp"/>

    <!--编辑文本按钮-->
    <Button
        android:id="@+id/personal_page_button_exinfo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="编辑个人信息"
        android:textSize="20sp"
        android:background="@drawable/background_button"/>

    <LinearLayout
        android:id="@+id/personal_page_linearlayout_4"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_page_linearlayout_5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--主页面-->
        <ImageButton
            android:id="@+id/personal_page_5_button_main_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints" />
        <!--社团页面-->
        <ImageButton
            android:id="@+id/personal_page_5_button_associations_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/social"
            tools:ignore="MissingConstraints" />
        <!--编辑页面-->
        <ImageButton
            android:id="@+id/personal_page_5_button_editor_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/add"
            tools:ignore="MissingConstraints" />
        <!--消息页面-->
        <ImageButton
            android:id="@+id/personal_page_5_button_message_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/comment"
            tools:ignore="MissingConstraints" />
        <!--个人页面-->
        <ImageButton
            android:id="@+id/personal_page_5_button_personal_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/user"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>