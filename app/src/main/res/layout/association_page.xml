<?xml version="1.0" encoding="utf-8"?><!--主页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/association_page_relativelayout"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/association_page_linearlayout_1"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_search"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/association_page_linearlayout_1_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--搜索按钮-->
            <ImageButton
                android:id="@+id/association_page_1_1_button_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="7dp"
                android:src="@drawable/search" />
            <!--搜索输入提示框-->
            <AutoCompleteTextView
                android:id="@+id/association_page_1_1_autocompletetextview_mEditSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:dropDownVerticalOffset="10dp"
                android:ellipsize="end"
                android:hint="荒野求生贝爷"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHighlight="#B4DF87"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <!--空白框-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <LinearLayout
        android:id="@+id/association_page_linearlayout_2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/association_page_linearlayout_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--主页面-->
        <ImageButton
            android:id="@+id/association_page_linearlayout_3_button_main_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints" />
        <!--社团页面-->
        <ImageButton
            android:id="@+id/association_page_linearlayout_3_button_associations_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/social"
            tools:ignore="MissingConstraints" />
        <!--编辑页面-->
        <ImageButton
            android:id="@+id/association_page_linearlayout_3_button_editor_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/add"
            tools:ignore="MissingConstraints" />
        <!--消息页面-->
        <ImageButton
            android:id="@+id/association_page_linearlayout_3_button_message_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/comment"
            tools:ignore="MissingConstraints" />
        <!--个人页面-->
        <ImageButton
            android:id="@+id/association_page_linearlayout_3_button_personal_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/user"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>